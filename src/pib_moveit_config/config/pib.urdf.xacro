<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="pib">
    <xacro:arg name="initial_positions_file" default="initial_positions.yaml" />

    <!-- Import pib urdf file -->
    <xacro:include filename="$(find my_pib_description)/urdf/robot.urdf" />

    <!-- Import control_xacro -->
    <xacro:include filename="pib.ros2_control.xacro" />


    <xacro:pib_ros2_control name="FakeSystem" initial_positions_file="$(arg initial_positions_file)"/>

</robot>
